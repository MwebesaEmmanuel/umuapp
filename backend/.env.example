# Change in production and keep secret
SECRET_KEY=change-me

# sqlite:///./umuapp.db (default) or PostgreSQL URL
DATABASE_URL=

# Comma-separated list
ALLOWED_EMAIL_DOMAINS=umu.ac.ug,stud.umu.ac.ug

# Comma-separated list of admin emails (optional)
ADMIN_EMAILS=

# Set true when you add real email verification
REQUIRE_EMAIL_VERIFICATION=false

# CORS
# For production: set `CORS_ORIGINS` to your web domain(s) and leave regex empty.
# Example: CORS_ORIGINS=https://umuapp.yourdomain.com
CORS_ORIGINS=

# For local dev (Flutter web runs on random ports)
CORS_ORIGIN_REGEX=^http://localhost(:[0-9]+)?$|^http://127[.]0[.]0[.]1(:[0-9]+)?$

# RSS feeds (comma-separated)
NEWS_RSS_URLS=https://news.google.com/rss?hl=en&gl=US&ceid=US:en,https://feeds.bbci.co.uk/news/rss.xml

# Motivation videos (comma-separated "Title|URL")
MOTIVATION_VIDEOS=TED: The power of believing you can improve|https://www.youtube.com/watch?v=_X0mgOOSpLU
